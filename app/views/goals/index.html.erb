<h1 class="heading-1">The Garden</h1>

<% if @goals_length === 0 %>
  <p class="paragraph text-xl font-light text-emerald-500 my-6">
    Let's plant a seed today and grow something beautiful.
  </p>
<% else %>
  <p class="paragraph mb-6">
    These are your plants. Tend them carefully and without judgement.
  </p>
  <ul class="flex flex-row flex-wrap gap-4">
    <% @goals.each do |goal| %>
      <%= link_to goal_path(goal) do %>
        <li class="block relative text-xl font-semibold py-4 px-10 rounded-xl
          transition bg-white hover:bg-indigo-50 text-indigo-500">
            <%= goal.name %>
            <div class="flex justify-center items-center absolute top-0 left-0 w-4 h-4 rounded-lg ml-1 mt-1 bg-gray-100">
              <span class="text-xs text-gray-400 leading-tight">
                <%= goal.length %>
              </span>
            </div>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Plant a seed', new_goal_path, class: 'btn mt-8' %>
